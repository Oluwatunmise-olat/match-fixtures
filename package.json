{
	"name": "match-fixtures",
	"version": "1.0.0",
	"main": "dist/index.js",
	"author": "Oluwatunmise Olatunbosun",
	"license": "MIT",
	"scripts": {
		"start:dev": "nodemon",
		"start": "node dist/src/index.js",
		"build": "tsc && tsc-alias",
		"test": "yarn run pre-test && jest --forceExit --no-cache --runInBand ; yarn run post-test",
		"pre-test": "/bin/bash ./scripts/pre-test-script.sh",
		"post-test": "/bin/bash ./scripts/post-test-script.sh",
		"sample-test": "/bin/bash ./scripts/sample.sh",
		"manual:deploy": "/bin/bash ./scripts/deploy.sh"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"http-status-codes": "^2.3.0",
		"joi": "^17.13.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.4.1",
		"rate-limiter-flexible": "^5.0.3",
		"redis": "^4.6.14",
		"reflect-metadata": "^0.2.2",
		"ts-node": "^10.9.2",
		"tsyringe": "^4.8.0",
		"typescript": "^5.4.5"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.14.0",
		"@withshepherd/faker": "^5.5.5",
		"eslint": "^9.4.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.3",
		"supertest": "^7.0.0",
		"testcontainers": "3.2.0",
		"ts-jest": "^29.1.4",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0"
	},
	"_moduleAliases": {
		"@app": "src",
		"@models": "src/models",
		"@config": "src/config",
		"@modules": "src/modules",
		"@shared": "src/shared"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts,json",
		"ignore": [
			"src/**/*.spec.ts"
		],
		"exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"testRegex": ".*\\.spec\\.ts$",
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"../jest.setup.ts"
		],
		"testTimeout": 100000,
		"moduleNameMapper": {
			"^@app/(.*)$": "<rootDir>/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@models/(.*)$": "<rootDir>/models/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@shared/(.*)$": "<rootDir>/shared/$1"
		}
	}
}
